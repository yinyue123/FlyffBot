{
  "manifest_version": 3,
  "name": "WASM Memory Scanner",
  "version": "1.0.0",
  "description": "类似 Cheat Engine 的 WASM 内存扫描工具，用于查找和修改 WebAssembly 内存",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "debugger"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "WASM Memory Scanner"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://universe.flyff.com/*"],
      "js": ["content/content.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "devtools_page": "devtools/devtools.html",
  "web_accessible_resources": [
    {
      "resources": ["content/injected.js", "content/memory-scanner.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
